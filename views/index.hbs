<!--Card Section-->
<div class="container">
   <div class="country-section"> 
      <div class="row">
               <div class="card text-center" id="card1">
                <div class="card-body ">
              <h5 class="card-title" id="title1">Total Confirmed<span style="font-size:25px; font-weight:900;"> <span class="countup">{{totalconfirmed}}</span></span><br> <span class="p-1">&#11165</span><span class="countup">{{increaseConfirmed}}</span></span></h5>
                 </div>
        </div>
        <div class="card text-center" id="card2">
            <div class="card-body ">
              <h5 class="card-title" id="title2">Total Active<br> <span style="font-size:25px;font-weight:900;"><span class="countup">{{totalactive}}</span></span></h5>
            </div>
        </div>
        <div class="card text-center"  id="card3">
            <div class="card-body ">
              <h5 class="card-title"  id="title3">Recovered<span style="font-size:25px;font-weight:900;"><br><span class="countup">{{totalrecovered}}</span></span><br><span class="p-1">&#11165</span><span class="countup">{{increaseRecovered}}</span></span></h5>
           </div>
        </div>
        <div class="card text-center" id="card4">
           <div class="card-body ">
            <h5 class="card-title" id="title4">Deaths<span style="font-size:25px;font-weight:900;"><br><span class="countup">{{totaldeaths}}</span></span> <br><span class="p-1 ">&#11165</span><span class="countup">{{increaseDeaths}}</span></span></h5>
          </div>
       </div>
     </div>
     </div>
    </div>
   </div>
   </div>
<!---End of Card Section-->

<section class="section_heading">
  <div class="container-fluid">
      <div class="row">
         <div class="col-lg-8">
            <h2>
               Cases of Coronavirus in All States
            </h2>
          </div>
          <div class="col-lg-4">
             <h5 style="text-align:center;">Last Updated: {{lastUpdated}}</h5>
         </div>
       </div>
  </div>
  {{!-- </div> --}}
     <div class="list_table table-responsive">
       <table class="table">
         <thead>
           <tr>
             <th scope="col">State</th>
             <th scope="col" id="Total">Total</th>
             <th scope="col" id="Active">Active</th>
             <th scope="col" id="recover">Recovered</th>
             <th scope="col" id="death">Death</th>
           </tr>
         </thead>
         <tbody>
            {{#each cdata}}
             <tr>
                <td>
                   {{this.state}}
                </td>
                <td>
                   {{this.confirmed}}
                </td>
                <td>
                   {{this.active}}
                </td>
                <td>
                   {{this.recovered}}
                </td>
                <td>
                   {{this.deaths}}
                </td>
             </tr> 
           {{/each}}     
         </tbody>
       </table>
     </div>
